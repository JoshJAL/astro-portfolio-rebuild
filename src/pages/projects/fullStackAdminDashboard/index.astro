          src='/images/MERNAdminDashboard/geography.jpg'
          placeHolder='/images/MERNAdminDashboard/geographyCompressed.jpg'
          alt='geography page'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/MERNAdminDashboard/overview.jpg'
          placeHolder='/images/MERNAdminDashboard/overviewCompressed.jpg'
          alt='overview page'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/MERNAdminDashboard/daily.jpg'
          placeHolder='/images/MERNAdminDashboard/dailyCompressed.jpg'
          alt='daily page'
        />
