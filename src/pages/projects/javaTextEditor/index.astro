---
import BaseHead from '../../../components/BaseHead.astro';
import Body from '../../../components/Body.astro';
import BreadCrumb from '../../../components/breadCrumb/BreadCrumb';
import Content from '../../../components/Content.astro';
import Header from '../../../components/header/Header.astro';
import LinksAndStack from '../../../components/linksAndStack/LinksAndStack.astro';
import ProjectDescription from '../../../components/projectsPage/ProjectDescription.astro';
import ProjectImg from '../../../components/projectsPage/ProjectImg.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../../consts';

const PROJECT_TITLE = 'Text Editor';

const { pathname } = Astro.url;
const BREADCRUMB_PREVIOUS = pathname.split('/')[1];
const BREADCRUMB_LINK = '/' + BREADCRUMB_PREVIOUS;

const BREADCRUMB_TITLE = capitalizeFirstLetter(BREADCRUMB_PREVIOUS);

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
---

<!DOCTYPE html>
<html>
  <head>
    <BaseHead title={SITE_TITLE + ' - ' + PROJECT_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header />
    <main class='pt-[60px]'>
      <Content>
        <BreadCrumb
          breadCrumbLink={BREADCRUMB_LINK}
          breadCrumbTitle={BREADCRUMB_TITLE}
          projectTitle={PROJECT_TITLE}
          year={2023}
        />
        <ProjectDescription
          description='A simple text editor written in Java that allows the user to open, edit and save text files. The user can also change the font size, font style and font color.'
        />
        <LinksAndStack githubLink='https://github.com/JoshJAL/admin-dashboard' stack='Java' />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/firstOpen.jpg'
          placeHolder='/images/JavaTextEditor/firstOpenCompressed.jpg'
          alt='first open'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/someText.jpg'
          placeHolder='/images/JavaTextEditor/someTextCompressed.jpg'
          alt='with some text'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/fontSize.jpg'
          placeHolder='/images/JavaTextEditor/fontSizeCompressed.jpg'
          alt='with some text and font size changed'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/colorPicker.jpg'
          placeHolder='/images/JavaTextEditor/colorPickerCompressed.jpg'
          alt='font color picker'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/fontColor.jpg'
          placeHolder='/images/JavaTextEditor/fontColorCompressed.jpg'
          alt='with some text with font style and font color changed'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/fileMenu.jpg'
          placeHolder='/images/JavaTextEditor/fileMenuCompressed.jpg'
          alt='file menu'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/openFile.jpg'
          placeHolder='/images/JavaTextEditor/openFileCompressed.jpg'
          alt='open file dialogue'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/JavaTextEditor/saveFile.jpg'
          placeHolder='/images/JavaTextEditor/saveFileCompressed.jpg'
          alt='save file dialogue'
        />
      </Content>
    </main>
  </Body>
</html>
