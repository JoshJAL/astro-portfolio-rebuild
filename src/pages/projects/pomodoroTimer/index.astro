---
import BaseHead from '../../../components/BaseHead.astro';
import Body from '../../../components/Body.astro';
import BreadCrumb from '../../../components/breadCrumb/BreadCrumb';
import Content from '../../../components/Content.astro';
import Header from '../../../components/header/Header.astro';
import LinksAndStack from '../../../components/linksAndStack/LinksAndStack.astro';
import ProjectDescription from '../../../components/projectsPage/ProjectDescription.astro';
import ProjectImg from '../../../components/projectsPage/ProjectImg.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../../consts';

const PROJECT_TITLE = 'Pomodoro Timer';

const { pathname } = Astro.url;
const BREADCRUMB_PREVIOUS = pathname.split('/')[1];
const BREADCRUMB_LINK = '/' + BREADCRUMB_PREVIOUS;

const BREADCRUMB_TITLE = capitalizeFirstLetter(BREADCRUMB_PREVIOUS);

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
---

<!DOCTYPE html>
<html>
  <head>
    <BaseHead title={SITE_TITLE + ' - ' + PROJECT_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header />
    <main class='pt-[60px]'>
      <Content>
        <BreadCrumb
          breadCrumbLink={BREADCRUMB_LINK}
          breadCrumbTitle={BREADCRUMB_TITLE}
          projectTitle={PROJECT_TITLE}
          year={2022}
        />
        <ProjectDescription
          description='A study timer built around the Pomodoro Technique with a "Focus" timer and a "Break" timer. After the time has elapsed for either the "Focus" or "Break" phase an alarm will play informing the user that it is time to either take a break or get back to work. I use this personally and find that it greatly aids in countering burnout when working on large projects.'
        />
        <LinksAndStack
          githubLink='https://github.com/JoshJAL/Pomodoro-Timer-Project'
          browsers={'Edge/Firefox/Google Chrome/Safari'}
          stack='HTML, CSS, JavaScript, React, NodeJs'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/public/images/pomodoroTimer/pomodoroTimerHomePage.jpg'
          placeHolder='/public/images/pomodoroTimer/pomodoroTimerHomePageCompressed.jpg'
          alt='Home Page'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/public/images/pomodoroTimer/timerRunning.jpg'
          placeHolder='/public/images/pomodoroTimer/timerRunningCompressed.jpg'
          alt='focus timer running'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/public/images/pomodoroTimer/timerPaused.jpg'
          placeHolder='/public/images/pomodoroTimer/timerPausedCompressed.jpg'
          alt='focus timer paused'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/public/images/pomodoroTimer/breakTimerRunning.jpg'
          placeHolder='/public/images/pomodoroTimer/breakTimerRunningCompressed.jpg'
          alt='break timer running'
        />
      </Content>
    </main>
  </Body>
</html>
