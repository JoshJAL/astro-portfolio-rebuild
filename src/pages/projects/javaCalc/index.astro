---
import BaseHead from '../../../components/BaseHead.astro';
import Body from '../../../components/Body.astro';
import BreadCrumb from '../../../components/breadCrumb/BreadCrumb';
import Content from '../../../components/Content.astro';
import Header from '../../../components/header/Header.astro';
import LinksAndStack from '../../../components/linksAndStack/LinksAndStack.astro';
import ProjectDescription from '../../../components/projectsPage/ProjectDescription.astro';
import ProjectImg from '../../../components/projectsPage/ProjectImg.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../../consts';

const PROJECT_TITLE = 'Java Calculator';

const { pathname } = Astro.url;
const BREADCRUMB_PREVIOUS = pathname.split('/')[1];
const BREADCRUMB_LINK = '/' + BREADCRUMB_PREVIOUS;

const BREADCRUMB_TITLE = capitalizeFirstLetter(BREADCRUMB_PREVIOUS);

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
---

<!DOCTYPE html>
<html>
  <head>
    <BaseHead title={SITE_TITLE + ' - ' + PROJECT_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header />
    <main class='pt-[60px]'>
      <Content>
        <BreadCrumb
          breadCrumbLink={BREADCRUMB_LINK}
          breadCrumbTitle={BREADCRUMB_TITLE}
          projectTitle={PROJECT_TITLE}
          year={2023}
        />
        <ProjectDescription
          description='The classic game of Snake. The player controls a snake that moves around the screen and eats apples. This program is written in Java and uses the Java Swing library to create the GUI.'
        />
        <LinksAndStack githubLink='https://github.com/JoshJAL/JavaCalculator' stack='Java' />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/javaCalc/home.jpg'
          placeHolder='/images/javaCalc/homeCompressed.jpg'
          alt='Starting Screen'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/javaCalc/input.jpg'
          placeHolder='/images/javaCalc/inputCompressed.jpg'
          alt='number inputted'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/javaCalc/subtract.jpg'
          placeHolder='/images/javaCalc/subtractCompressed.jpg'
          alt='number being subtracted from previous number in calculator'
        />
        <ProjectImg
          projectTitle={PROJECT_TITLE}
          src='/images/javaCalc/result.jpg'
          placeHolder='/images/javaCalc/resultCompressed.jpg'
          alt='result of calculation being displayed'
        />
      </Content>
    </main>
  </Body>
</html>
