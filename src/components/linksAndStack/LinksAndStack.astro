---
import BadgeLabel from '../badgeLabel/BadgeLabel.astro';

export interface Props {
  hostedApplication?: string;
  githubLink: string;
  browsers?: string;
  stack: string;
}

const { hostedApplication, githubLink, browsers, stack } = Astro.props;
---

<div class='my-7'>
  {
    hostedApplication && (
      <>
        <BadgeLabel label='HOSTED APPLICATION' />
        <p class='md:text-base text-sm mb-4 mt-3'>
          <a
            href={hostedApplication}
            target='_blank'
            class='text-orange-600 dark:text-teal-300 hover:underline underline-offset-2 cursor-pointer'
          >
            {hostedApplication}
          </a>
        </p>
      </>
    )
  }
  <BadgeLabel label='GITHUB REPOSITORY' />
  <p class='md:text-base text-sm mb-4 mt-3'>
    <a
      href={githubLink}
      target='_blank'
      class='text-orange-600 dark:text-teal-300 hover:underline underline-offset-2 cursor-pointer'>{githubLink}</a
    >
  </p>
  {
    browsers && (
      <>
        <BadgeLabel label='BROWSERS' />
        <p class='md:text-base text-sm mt-3 mb-4'>{browsers}</p>
      </>
    )
  }
  <BadgeLabel label='STACK' />
  <p class='md:text-base text-sm mt-3'>{stack}</p>
</div>
